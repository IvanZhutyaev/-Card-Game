{
  "name": "seka-card-game",
  "version": "0.1.3",
  "description": "Карточная игра, разработанная как Telegram Mini App",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "start": "node server.js",
    "build": "node build.js",
    "build:ts": "tsc",
    "dev": "nodemon server.js",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:prod": "NODE_ENV=production npm run deploy",
    "postversion": "git push && git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "clean": "rimraf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "update-deps": "npm-check-updates -u && npm install",
    "check-deps": "npm-check-updates",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanZhutyaev/Seka-Card_Game.git"
  },
  "keywords": [
    "card-game",
    "telegram",
    "mini-app",
    "game"
  ],
  "author": "Ivan Zhutyaev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IvanZhutyaev/Seka-Card_Game/issues"
  },
  "homepage": "https://github.com/IvanZhutyaev/Seka-Card_Game#readme",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "@twa-dev/sdk": "^6.9.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "conventional-changelog-cli": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "npm-check-updates": "^16.14.17",
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "esbuild": "^0.19.8",
    "esbuild-sass-plugin": "^2.16.0",
    "glob": "^10.3.10",
    "sass": "^1.69.5",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "typescript": "^5.3.3",
    "ts-jest": "^29.1.1",
    "sharp": "^0.33.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|ts|tsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/modules/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@jest/globals)/)"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
