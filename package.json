{
  "name": "seka-card-game",
  "version": "0.1.3",
  "description": "Карточная игра, разработанная как Telegram Mini App",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "start": "node server.js",
    "build": "node build.js",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:prod": "NODE_ENV=production npm run deploy",
    "postversion": "git push && git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "clean": "rimraf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "update-deps": "npm-check-updates -u && npm install",
    "check-deps": "npm-check-updates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/seka-card-game.git"
  },
  "keywords": [
    "card-game",
    "telegram",
    "mini-app",
    "game"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/seka-card-game/issues"
  },
  "homepage": "https://github.com/your-username/seka-card-game#readme",
  "dependencies": {
    "express": "^5.1.0",
    "ws": "^8.18.2",
    "dotenv": "^16.5.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "compression": "^1.8.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "babel-jest": "^29.7.0",
    "conventional-changelog-cli": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.0.1",
    "npm-check-updates": "^18.0.1",
    "nodemon": "^3.1.10",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "esbuild": "^0.20.2",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^10.3.10"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/modules/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@jest/globals)/)"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
