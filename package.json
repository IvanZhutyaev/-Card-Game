{
  "name": "seka-card-game",
  "version": "0.1.2",
  "description": "Карточная игра, разработанная как Telegram Mini App",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "start": "node server.js",
    "build": "node build.js",
    "postversion": "git push && git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/seka-card-game.git"
  },
  "keywords": [
    "card-game",
    "telegram",
    "mini-app",
    "game"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/seka-card-game/issues"
  },
  "homepage": "https://github.com/your-username/seka-card-game#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "conventional-changelog-cli": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/modules/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@jest/globals)/)"
    ]
  }
}
